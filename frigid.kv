#:kivy 2.0.0


MyScreenManager:
    MainScreen:
        id: mainScreen
        name: 'mainScreen'
    BoxScreen:
        id: boxScreen
        name: 'boxScreen'

<MAINSCREEN>
    BoxLayout:
        orientation: 'vertical'
        RV:
            id:rv

        BoxLayout:
            orientation:'vertical'
            padding:'20px'
            size_hint_y:.4
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'test1'
                    on_press: root.test()
                Button:
                    text:'test2'
                Button:
                    text:'test3'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'test1'
                Button:
                    text:'test2'
                Button:
                    text:'test3'
<BOXSCREEN>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: boxName
            font_size: 40
            text: 'TestBox'
            size_hint_y:.15
        BoxLayout:
            orientation:'horizontal'
            GridLayout:
                cols: 2
                padding:[20,100,20,100]
                spacing:20
                Label:
                    text: 'Contact:'
                    font_size:25
                    size_hint_x:None
                    width:150
                TextInput:
                Label:
                    text: 'Contents:'
                    font_size:25
                    size_hint_x:None
                    width:150
                TextInput:
                Label:
                    text: 'Quantity:'
                    font_size:25
                    size_hint_x:None
                    width:150
                TextInput:
            BoxLayout:
                orientation:'vertical'
                padding:20
                spacing:10
                Label:
                    text: 'Note:'
                    font_size:25
                    size_hint_y:.075
                    text_size:self.size
                    halign: 'left'
                TextInput:
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:.3
            spacing:5
            padding:20
            Button:
                text:'Back'
            Button:
                text:'Remove Entry'
                background_color:'lightcoral'
            Button:
                text:'Update'
            

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

            
<RV>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: [20,20,20,20]
            spacing: 10
            orientation: "horizontal"
            size_hint_y: .3
            TextInput:
                on_text: root.search_function(self.text)
            Button:
                
                text:'search'
                size_hint_x:.2
                on_press:
                    root.search_function(self.text)
        BoxLayout:
            RecycleView:
                viewclass: 'SelectableButton'
                data: [{'text': str(x)} for x in root.data_items]
                SelectableRecycleGridLayout:
					id: rv
                    cols: 2
                    padding: [20,0,20,0]
                    default_size: None, dp(50)
                    default_size_hint: 1,None
                    size_hint_y: None
                    height: self.minimum_height
                    multiselect: False
                    touch_multiselect: True
					
                        
                        
                        